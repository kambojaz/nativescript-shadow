<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-shadow">
  <Page.actionBar>
      <ActionBar class="action-bar" title="NativeScript Shadow" />
  </Page.actionBar>
  <StackLayout class="p-20">
    <Button class="btn btn-primary" text="Add Shadow" tap="{{ addShadow }}"/>
    <StackLayout width="200" backgroundColor="white" class="m-t-30" id="shadowBox">
      <Image width="200" height="200" src="res://icon" />
    </StackLayout>

    <StackLayout translateY="-10" id="shadowBox2" class="m-t-30" width="200" height="200" backgroundColor="white">
    </StackLayout>
  </StackLayout>
</Page>